//========
// Colors

black = #333
gray = #BEBEC0
asphalt = #777
red = #EE3724

//=======
// Fonts

default-font = 'Cubano', sans-serif

@font-face
    font-family 'Cubano'
    src url('/fonts/cubano-webfont.eot')
    src url('/fonts/cubano-webfont.eot?#iefix') format('embedded-opentype'),
        url('/fonts/cubano-webfont.woff2') format('woff2'),
        url('/fonts/cubano-webfont.woff') format('woff'),
        url('/fonts/cubano-webfont.ttf') format('truetype'),
        url('/fonts/cubano-webfont.svg#cubanoregular') format('svg')
    font-weight normal
    font-style normal

//========
// Mixins

link-color(c)
    color c
    transition color .25s

    &:focus, &:hover
        color lighten(c, 25%)

//=======
// Reset

global-reset()

*
    box-sizing border-box

//========
// Styles

body
    font 32px/40px default-font
    color asphalt

a
    link-color red

.logo
    margin 60px 0 40px 20%

    img
        display block
        height 150px
        margin-left -81px // Lines up the Ks.

h1
    margin-bottom 40px

    a
        display block
        overflow hidden
        text-decoration none

    .first-name
        display block
        float left
        width 20%
        text-align right
        padding-right 10px
        color gray

    .last-name
        display block
        float left
        width 80%

.container
    padding 0 10%
    margin 0 auto

section
    overflow hidden
    margin-bottom 20px

    h2
        float left
        width 20%
        text-align right
        padding-right 10px
        color gray

    p, ul
        float left
        width 80%

    li
        padding-left 20px
        text-indent -20px

.footer
    margin 40px 20px 20px
    font 14px/20px default-font
    text-align center

//===============
// Link Coloring

.github    { link-color: #333333 }
.facebook  { link-color: #3B5998 }
.twitter   { link-color: #55ACEE }
.medium    { link-color: #333333 }
.email     { link-color: #DF4A32 }
.filepizza { link-color: #B3190B }
.hackbot   { link-color: #34703D }
.puddin    { link-color: #D99517 }
.berkeley  { link-color: #162279 }
.hh        { link-color: #19A84C }
.stab      { link-color: #F6B100 }
.calhacks  { link-color: #F8A700 }
.kairos    { link-color: #DC260A }
.apple     { link-color: #231F20 }
.jpl       { link-color: #FF281E }
.alp       { link-color: #E58C2C }

//===============
// Media Queries

@media (max-width: 1279px)
  .container
      padding 0

@media (max-width: 959px)
    body
        font 28px/30px default-font

    .logo
        margin 40px 0 20px 50%

    h1
        .first-name, .last-name
            width 50%

    main
        padding 0 20px

    section
        margin-bottom 30px

        h2
            margin-bottom 15px
            text-align left

        h2, p, ul
            float none
            width auto

        li
            margin-bottom 15px

    .footer
        font 12px/15px default-font
