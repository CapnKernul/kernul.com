!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    
    %title #{@title} - Kernpedia
    
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/application.css'}
    
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'}
    
    /[if lte IE 8]
      %script{:src => 'http://html5shiv.googlecode.com/svn/trunk/html5.js'}
      %script{:src => '/js/selectivizr.js'}
    /[if lte IE 6]
      %link{:rel => 'stylesheet', :src => 'http://universal-ie6-css.googlecode.com/files/ie6.1.1.css', :media => 'screen, projection'}
  
  %body
    #container
      %header#header= render_partial 'header'
      #main= yield
      %footer#footer= render_partial 'footer'